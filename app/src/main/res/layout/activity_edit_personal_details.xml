<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityEditPersonalDetails"
    android:orientation="vertical"
    android:background="@color/grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_epd"
        android:background="@color/colorOrange">
        <ImageView
            android:id="@+id/img_backbtneditpersonaldetails"
            android:layout_weight="1"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:src="@drawable/backbutton"
            android:background="@color/colorOrange" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EDIT PERSONAL DETAILS"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/toolbar_epd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp">

        <EditText
            android:id="@+id/edt_firstname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="First Name"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_middlename"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="Middle Name"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_lastname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:text=""
            android:hint="Last Name"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="Nick Name"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="Phone"
            android:inputType="phone"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_dob"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text=""
            android:hint="Date of Birth"
            android:clickable="true"
            android:inputType="date"
            android:focusable="false"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_savechanges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE CHANGES"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>
</RelativeLayout>