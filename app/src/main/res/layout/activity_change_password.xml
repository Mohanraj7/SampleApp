<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityChangePassword"
    android:orientation="vertical"
    android:background="@color/grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_changepwd"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backbtnchangepwd"
            android:layout_weight="1"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:src="@drawable/backbutton"
            android:background="@color/colorOrange" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHANGE PASSWORD"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_changepwd">
        <EditText
            android:id="@+id/edt_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Old Password"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_newpwd"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="New Password"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_confirmpwd"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:hint="Confirm Password"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn_savechanges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE CHANGES"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>


</RelativeLayout>