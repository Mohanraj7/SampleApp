<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityEditAddressDetails"
    android:orientation="vertical"
    android:background="@color/grey">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">
        <ImageView
            android:id="@+id/img_backbtneditaddressdetails"
            android:layout_weight="1"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:src="@drawable/backbutton"
            android:background="@color/colorOrange" />


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EDIT ADDRESS DETAILS"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edt_addrline1"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="21 King Street West"
            android:hint="Address line 1"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_addrline2"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Hamilton"
            android:hint="Address line 2"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_city"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Hamilton"
            android:hint="City"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_state"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Hamilton"
            android:hint="State"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_country"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="On"
            android:hint="Country"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_postalcode"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="1234"
            android:hint="Postal Code"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange">

        <TextView
            android:id="@+id/txt_savechanges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE CHANGES"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>

</RelativeLayout>