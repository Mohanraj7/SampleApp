<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityEditLicenseDetails"
    android:orientation="vertical"
    android:background="@color/grey"
    android:gravity="center">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_alignParentTop="true"
    android:id="@+id/toolbar_eld"
    android:background="@color/colorOrange">
    <ImageView
        android:id="@+id/img_backbtneditlicensedetails"
        android:layout_weight="1"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:src="@drawable/backbutton"
        android:background="@color/colorOrange" />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EDIT LICENSE DETAILS"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/toolbar_eld">
        <EditText
            android:id="@+id/edt_licensenum"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="123456"
            android:hint="License Number"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_licensestate"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Cab"
            android:hint="License State"
            android:paddingLeft="8sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_rounded_border"/>
        <EditText
            android:id="@+id/edt_licenseexpdt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:text="16-Aug-2020"
            android:focusable="false"
            android:hint="License Expiry Date"
            android:paddingLeft="8sp"
            android:background="@drawable/edittext_rounded_border"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorOrange"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_savechanges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE CHANGES"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus93"/>
    </LinearLayout>
</RelativeLayout>