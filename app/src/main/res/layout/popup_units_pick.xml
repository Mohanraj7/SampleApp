<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgrey"
    android:padding="50sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <!--Load - Pick Label-->
        <RelativeLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_unitspickup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LOAD - PICK"
                android:textColor="@color/white"
                android:fontFamily="@font/courier"
                android:gravity="center"
                android:textSize="25sp"/>

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/close"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_margin="5sp"
            android:id="@+id/txt_alloted_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/light_orange"
            android:fontFamily="@font/courier"
            android:gravity="center"
            android:textSize="20sp"/>

        <ScrollView
            android:id="@+id/cb_scrollview"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:scrollbarThumbVertical="@color/light_orange"
            android:scrollbarSize="3sp">

            <LinearLayout
                android:id="@+id/cb_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20sp"
                android:paddingRight="20sp">

                <CheckBox
                    android:visibility="visible"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cb_unit_1"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_2"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 2"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_3"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 3"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_4"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 4"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_5"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 5"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_6"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 6"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_7"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 7"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_8"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 8"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/cb_unit_9"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 9"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/cb_unit_10"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/grey_colored_rounded_rec_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="10sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:theme="@style/checkBoxStyle"
                    android:text="Unit 10"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </ScrollView>

        <!--Submit Button-->
        <Button
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"
            android:id="@+id/btn_submit"
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:text="SUBMIT"
            android:gravity="center"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/bauhaus"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>